<div class="w-full flex flex-col gap-y-8">
  <h1 class="font-bold text-4xl">Event#index</h1>
  <div class="ml-auto">
    <%= link_to "Show My Events", events_path(mine: true), class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    <%= link_to "Show All Events", events_path, class: "bg-gray-500 text-white px-4 py-2 rounded ml-2" %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% if @events.any? %>
      <% @events.each do |event| %>
        <div class="border p-4 rounded-lg">
          <h1 class="text-2xl font-semibold">
            <%= event.title %>
          </h1>
          <p class="text-gray-700">
            <%= event.body %>
          </p>
          <div class="text-sm text-gray-500">
            Author: <%= event.user.email_address %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No events found.</p>
    <% end %>
  </div>
</div>
